<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:paddingStart="20dp"
    android:weightSum="5"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="4.5"
       android:orientation="vertical">
       <TextView
           android:textStyle="bold"
           android:textSize="18dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_tenkhach"
           android:text="fdjsansnjajs"/>
       <TextView
           android:textSize="18dp"
           android:layout_marginTop="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_sdtdh"
           android:text="fdjsansnjajs"/>
       <TextView
           android:textSize="18dp"
           android:layout_marginTop="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_emaildh"
           android:text="fdjsansnjajs"/>
       <TextView
           android:textSize="18dp"
           android:layout_marginTop="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_diachidh"
           android:text="fdjsansnjajs"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="0.5"
       android:gravity="center"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <ImageView
           android:layout_gravity="center"
           android:id="@+id/img_deletedh"
           android:layout_width="40dp"
           android:layout_height="50dp"
           android:src="@drawable/ic_baseline_delete_24" />
       <ImageView
           android:layout_gravity="center"
           android:id="@+id/img_thanhtoan"
           android:layout_width="40dp"
           android:layout_height="50dp"
           android:src="@drawable/thanhtoan" />
