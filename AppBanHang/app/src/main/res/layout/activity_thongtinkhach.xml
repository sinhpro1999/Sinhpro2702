<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7D92A6"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".activity.ThongtinkhachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/boder_thongtinkhach"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin khách hàng"
            android:textSize="25dp"
            android:textColor="#0F1010"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/edt_tenkhachhang"
                android:textColorHint="#037065"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên của khách hàng"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_sodienthoaikhachhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SDT của khách hàng"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_emailkhachhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email của khách hàng"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_diachikhachhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_xacnhanthongtinkhachhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#59DDED"
                android:padding="10dp"
                android:text="Xác nhận"
                android:textSize="18dp" />

            <Button
                android:layout_marginLeft="40dp"
                android:id="@+id/btn_trovegiohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Trở về"
                android:background="#59DDED"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>