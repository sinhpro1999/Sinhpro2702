<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:background="#FDFDFB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="200dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:id="@+id/img_dienthoaiv"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tenspdienthoai"
                    android:textSize="20dp"
                    android:text="ten san pham"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#E91E63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_giapdienthoai"
                    android:textSize="20dp"
                    android:text="gia san pham"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#48494A"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_motaspdienthoai"
                    android:textSize="20dp"
                    android:text="mo ta san pham"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>